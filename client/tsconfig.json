{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "types": ["vite/client", "node", "jest"]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.cjs",
        "**/*.mjs",
        "server.mjs",
        "./types",
        "test/**/*.ts",
        "__tests__/**/*.ts"
    ]
}
